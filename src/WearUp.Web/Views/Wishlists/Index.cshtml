@model WishlistResponse
@{
    ViewData["Title"] = "My Wishlist";
    Layout = "_CartLayout";
}

<div class="container my-5">
    <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <i class="bi bi-heart-fill text-danger me-2"></i><b>Wishlist</b>
                </h4>
                <div class="d-flex align-items-center">
                    @if (Model.Items.Any())
                    {
                        <span class="text-muted me-3">@Model.Items.Count() items</span>
                        <button class="btn btn-sm btn-outline-danger me-3 clear" data-wishlist-id="@Model.Id" title="Clear Wishlist">
                            <i class="bi bi-trash3-fill"></i> Clear All
                        </button>
                    }
                    <a asp-action="Index" asp-controller="Cart" class="btn btn-primary" title="Go to Cart">
                        <i class="bi bi-cart-fill me-1"></i> My Cart
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body p-0">
            @if (Model.Items.Any())
            {
                <ul class="list-group list-group-flush">
                    @foreach (var item in Model.Items)
                    {
                        <li class="list-group-item p-3">
                            <div class="d-flex align-items-center">
                                <img class="img-fluid rounded" alt="@item.ProductName" src="@item.ImageName" style="width: 80px; height: 80px; object-fit: cover;">

                                <div class="ms-3 flex-grow-1">
                                    <h6 class="mb-1">@item.ProductName</h6>
                                    <small class="text-muted">Category Name</small>
                                </div>

                                <div class="mx-4 text-center">
                                    <h5 class="mb-0">&euro; @item.Price.ToString("N2")</h5>
                                </div>

                                <div class="d-flex gap-2">
                                    <button class="btn btn-outline-danger btn-sm rounded-circle delete"
                                            data-product-id="@item.ProductId"
                                            data-wishlist-id="@Model.Id"
                                            title="Remove from Wishlist">
                                        <i class="bi bi-trash3"></i>
                                    </button>
                                    <a href="#" class="btn btn-outline-success btn-sm rounded-circle add-to-cart"
                                       title="Add to Cart"
                                       data-product-id="@item.ProductId"
                                       data-product-name="@item.ProductName"
                                       data-image-name="@item.ImageName"
                                       data-price="@item.Price"
                                       data-count="1">
                                        <i class="bi bi-cart-plus"></i>
                                    </a>
                                </div>
                            </div>
                        </li>
                    }
                </ul>
            }
            else
            {
                <div class="text-center p-5">
                    <i class="bi bi-heart" style="font-size: 4rem; color: #ccc;"></i>
                    <h5 class="mt-3">Your wishlist is empty</h5>
                    <p class="text-muted">Add items you love to your wishlist to see them here.</p>
                </div>
            }
        </div>

        <div class="card-footer bg-light text-center">
            <a asp-action="Index" asp-controller="Home" class="text-decoration-none">
                <i class="bi bi-arrow-left me-1"></i> Back to shop
            </a>
        </div>

     
    </div>

    <div class="recommendations-section mt-5">
        <h3 class="mb-3 text-center">You Might Also Like</h3>
        <div class="recommendations">
        </div>
    </div>
</div>

@section Scripts {
    @Html.AntiForgeryToken()
    <script src="~/carts/js/addtocart.js" asp-append-version="true"></script>
    <script src="~/wishlists/js/deleteitem.js" asp-append-version="true"></script>
    <script src="~/wishlists/js/clear.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function(){
            $(".recommendations").load("/Product/LoadRecommendations")
        })
    </script>
}